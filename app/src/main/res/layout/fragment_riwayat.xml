<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.riwayat.RiwayatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_riwayat"
        android:layout_width="413dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/header_background"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="87dp"
            android:layout_height="105dp"
            android:layout_gravity="left"
            android:layout_margin="0dp"
            android:contentDescription="@string/app_name"
            android:padding="0dp"
            android:src="@drawable/anak"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="-11dp" />

        <TextView
            android:id="@+id/text_riwayat"
            android:layout_width="342dp"
            android:layout_height="24dp"
            android:text="Nama Anak"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="23dp" />


        <ImageView
            android:layout_width="87dp"
            android:layout_height="105dp"
            android:layout_gravity="left"
            android:layout_margin="0dp"
            android:contentDescription="@string/app_name"
            android:padding="0dp"
            android:src="@drawable/anak"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="-11dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:background="@drawable/pengumuman_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="114dp">

        <LinearLayout
            android:id="@+id/layoutpengumuman"
            android:layout_width="415dp"
            android:layout_height="306dp"
            android:background="@drawable/white_rectangle_background"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="0dp"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="left"
                android:layout_margin="0dp"
                android:contentDescription="@string/app_name"
                android:padding="0dp"
                android:src="@drawable/grafik1"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="12dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
